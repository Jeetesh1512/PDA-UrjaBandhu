generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  role          Role           @default(BASIC_USER)
  notifications Notification[]

  admin                 Admin?
  lineman               Lineman?
  basicUser             BasicUser?
  NotificationRecipient NotificationRecipient[]
}

enum Role {
  ADMIN
  LINEMAN
  BASIC_USER
}

model Admin {
  user         User          @relation(fields: [id], references: [id], onDelete: Cascade)
  id           String        @id
  appointments Appointment[]
}

model Lineman {
  user         User             @relation(fields: [id], references: [id], onDelete: Cascade)
  id           String           @id
  locality     Locality[]
  appointments Appointment[]
  updates      IncidentUpdate[]
  outages      Outage[]
}

model BasicUser {
  user        User       @relation(fields: [id], references: [id], onDelete: Cascade)
  id          String     @id
  household   Household  @relation(fields: [householdId], references: [id], onDelete: Cascade)
  householdId String
  photoUrl    String
  Incident    Incident[]

  @@unique([id, householdId])
}

model Household {
  id           String      @id @default(uuid())
  address      String
  latitude     Float
  longitude    Float
  primaryEmail String?
  verified     Boolean     @default(false)
  locality     Locality    @relation(fields: [localityId], references: [id], onDelete: Cascade)
  localityId   String
  residents    BasicUser[]
  meter        Meter[]

  @@index([latitude, longitude])
}

model Meter {
  id             String    @id @default(uuid())
  household      Household @relation(fields: [householdId], references: [id], onDelete: Cascade)
  householdId    String
  powerStatus    Boolean
  currentReading BigInt
  lastReading    BigInt

  @@index([powerStatus])
}

model Locality {
  id          String        @id @default(uuid())
  location    String
  households  Household[]
  lineman     Lineman[]
  incidents   Incident[]
  outages     Outage[]
  Appointment Appointment[]

  @@index([location])
}

model Appointment {
  id         String   @id @default(uuid())
  date       DateTime
  locality   Locality @relation(fields: [localityId], references: [id], onDelete: Cascade)
  localityId String
  admin      Admin    @relation(fields: [adminId], references: [id])
  lineman    Lineman  @relation(fields: [linemanId], references: [id])
  adminId    String
  linemanId  String

  @@index([adminId])
  @@index([linemanId])
}

model Incident {
  id            String           @id @default(uuid())
  reporter      BasicUser        @relation(fields: [basicUserId], references: [id])
  reporterId    String
  location      String
  latitude      Float
  longitude     Float
  description   String
  status        IncidentStatus   @default(REPORTED)
  locality      Locality         @relation(fields: [localityId], references: [id], onDelete: Cascade)
  localityId    String
  photoUrl      String
  reports       Report[]
  updates       IncidentUpdate[]
  notifications Notification[]
  basicUserId   String

  @@index([localityId, status])
  @@index([latitude, longitude])
}

enum IncidentStatus {
  REPORTED
  IN_PROGRESS
  RESOLVED
}

model Outage {
  id            String         @id @default(uuid())
  reporter      Lineman        @relation(fields: [linemanId], references: [id])
  reporterId    String
  location      String
  reason        String
  startTime     DateTime
  endTime       DateTime
  locality      Locality       @relation(fields: [localityId], references: [id], onDelete: Cascade)
  localityId    String
  reports       Report[]
  notifications Notification[]
  linemanId     String

  @@index([localityId, startTime])
  @@index([startTime, endTime])
}

model IncidentUpdate {
  id         String   @id @default(uuid())
  resolution String
  updatedAt  DateTime @default(now())
  incident   Incident @relation(fields: [incidentId], references: [id])
  incidentId String
  lineman    Lineman  @relation(fields: [linemanId], references: [id])
  linemanId  String
}

model Report {
  id            String         @id @default(uuid())
  reportingTime DateTime
  incident      Incident?      @relation(fields: [incidentId], references: [id])
  outage        Outage?        @relation(fields: [outageId], references: [id])
  incidentId    String?
  outageId      String?
  notifications Notification[]

  @@index([incidentId])
  @@index([outageId])
}

model Notification {
  id               String           @id @default(uuid())
  time             DateTime         @default(now())
  message          String
  notificationType NotificationType
  relatedType      RelatedType
  relatedId        String

  receipients NotificationRecipient[]
  User        User?                   @relation(fields: [userId], references: [id])
  userId      String?
  Incident    Incident?               @relation(fields: [incidentId], references: [id], onDelete: Cascade)
  incidentId  String?
  Outage      Outage?                 @relation(fields: [outageId], references: [id], onDelete: Cascade)
  outageId    String?
  Report      Report?                 @relation(fields: [reportId], references: [id], onDelete: Cascade)
  reportId    String?

  @@index([userId, notificationType])
  @@index([relatedType, relatedId])
}

model NotificationRecipient {
  id             String       @id @default(uuid())
  notification   Notification @relation(fields: [notificationId], references: [id], onDelete: Cascade)
  notificationId String
  user           User         @relation(fields: [userId], references: [id])
  userId         String
}

enum RelatedType {
  INCIDENT
  OUTAGE
  REPORT
  APPOINTMENT
}

enum NotificationType {
  ALERT
  RESOLVED
  SCHEDULED
  ASSIGNED
  CONFIRMED
}
